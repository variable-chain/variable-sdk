{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./",
    "strict": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["jest","node"]
  },
  "include":["src"],
  "exclude": [
    "node_modules",
    "scripts",
    "test"
  ]
}